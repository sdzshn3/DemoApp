<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="#e0e0e0"
    tools:targetApi="lollipop">
    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#E65100"/>
            <corners
                android:radius="2dp" />

            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
            <solid android:color="@color/colorAccent"/>
        </shape>
    </item>
</ripple>